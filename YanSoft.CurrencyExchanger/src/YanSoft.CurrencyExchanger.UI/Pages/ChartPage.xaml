                                        HorizontalOptions="EndAndExpand"
                                        VerticalOptions="Center" ItemsSource="{Binding CurrencyList}"
                                        SelectedItem="{Binding TargetCurrency}"
                                        ItemDisplayBinding="{Binding Name}"></Picker>
                            </StackLayout>
                        </ViewCell>
                    </TableSection>
                </TableRoot>
                </TableView>-->
                <syncfusionButtons:SfSegmentedControl x:Name="segmentedControl" Grid.Row="2"
                CornerRadius="5" VisibleSegmentsCount="6" DisplayMode="Text" VerticalOptions="Start"
                ItemsSource="{Binding RangeList}" SelectedIndex="{Binding SelectedRangeIndex, Mode=TwoWay}">
                <syncfusionButtons:SfSegmentedControl.SelectionIndicatorSettings>
                    <syncfusionButtons:SelectionIndicatorSettings Position="Top">
                    </syncfusionButtons:SelectionIndicatorSettings>
                </syncfusionButtons:SfSegmentedControl.SelectionIndicatorSettings>
            </syncfusionButtons:SfSegmentedControl>
        </Grid>
    </ContentPage.Content>
</views:MvxContentPage>